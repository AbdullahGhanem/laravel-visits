{
    "name": "phpfalcon/bareq",
    "type": "library",
    "description": "Laravel Redis visits counter for Eloquent models",
    "keywords": [
        "Laravel", "Visits", "Counter", "Package",  "Redis",  "Cache",  "Php", "Bareq"
    ],
    "homepage": "https://github.com/phpfalcon/Bareq",
    "license": "MIT",
    "authors": [
        {
            "name": "Bader Almutairi",
            "email": "bderemail@gmail.com"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "phpfalcon\\Bareq\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "phpfalcon\\Bareq\\BareqServiceProvider"
            ],
            "aliases": {
                "Visits": "phpfalcon\\Bareq\\Visits"
            }
        }
    },
    "config": {
        "sort-packages": true
    }
}
